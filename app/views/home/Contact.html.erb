<h1>Contact Form</h1>


<%= simple_form_for(@contact_info, :url => send_contact_path, html: { class: 'form-horizontal' }) do |f| -%>
  <%= f.input :Name -%>
  <%= f.input :Email -%>
  <%= f.input :PhoneNumber -%>
  <%= f.input :Message -%>
  <%= f.submit -%>
<%-end -%>


<form role="form" class="form-horizontal">
  <div class="form-group">
    <label class="control-label col-sm-2">Name</label>
    <div class="col-sm-7">
      <input class="form-control" type='text'></input>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2">Email</label>
    <div class="col-sm-7">
      <input class="form-control" type='email'></input>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2">Phone Number</label>
    <div class="col-sm-7">
      <input class="form-control" type='tel'></input>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2">Message</label>
    <div class="col-sm-7">
      <textarea class="form-control" type='text-area'></textarea>
    </div>
  </div>
  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-7">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
  </div>
</form>
